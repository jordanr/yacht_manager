<div id="main_content">
<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th></th>
    <th>Length</th>
    <th>Manufacturer</th>
    <th>Model</th>
    <th>Year</th>
    <th></th>    
    <th>Location</th>
    <th></th>    
    <th>Contact</th>
    <th>Price</th>
  </tr>

<% for listing in @classifieds %>
  <tr>
    <td><%= image_tag(listing.main_photo) %></td>
    <td><%= link_to "<i>#{listing.yacht_name}</i>", classified_path(listing) %></td>
    <td class="spacer"></td>
    <td><%=h listing.formated_length %></td>
    <td><%=h listing.yacht_specification_manufacturer %></td>
    <td><%=h listing.yacht_specification_model %></td>
    <td><%=h listing.yacht_specification_year %></td>
    <td class="spacer"></td>
    <td><%=h listing.yacht_location %></td>
    <td class="spacer"></td>
    <td><%=h listing.contact %></td>
    <td><%=h listing.formated_price %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @classifieds %>
</div>
