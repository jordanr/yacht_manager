<div id="main_content">
<h1>Yacht Classifieds</h1>

<table>
  <tr>
    <th></th>
    <th>Contact</th>
    <th>Price</th>
    <th>Name</th>
    <th>New?</th>
    <th>Location</th>
    <th>Length</th>
    <th>Manufacturer</th>
    <th>Model</th>
    <th>Year</th>
    <th>Designer</th>
  </tr>

<% for listing in @classifieds %>
  <tr>
    <td><%= link_to 'More Information', classified_path(listing) %></td>
    <td><%=h listing.contact %></td>
    <td><%=h listing.price %></td>
    <td><%=h listing.yacht_name %></td>
    <td><%=h listing.yacht_new %></td>
    <td><%=h listing.yacht_location %></td>
    <td><%=h listing.yacht_specification_length %></td>
    <td><%=h listing.yacht_specification_manufacturer %></td>
    <td><%=h listing.yacht_specification_model %></td>
    <td><%=h listing.yacht_specification_year %></td>
    <td><%=h listing.yacht_specification_designer %></td>
  </tr>
<% end %>
</table>
</div>
