<% form_for(@listing) do |f| %>
  <%= f.error_messages %>
  <div id="left_content">
  <p>
    <%= f.label :active, 'Publish?' %><%= f.check_box :active %>
  </p>
  <p>
    <%= f.label :contact, "Contact Information (name, phone number, email)" %><br />
    <%= f.text_field :contact %>
  </p>
  <p>
    <%= f.label :price, "Price (dollars)" %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :yacht_name, 'Yacht Name' %><br />
    <%= f.text_field :yacht_name %>
  </p>
  <p>
    <%= f.label :yacht_location, 'Location (city, state, country)' %><br />
    <%= f.text_field :yacht_location %>
  </p>
  </div>

  <div id="right_content">
  <p>
    <%= f.label :yacht_specification_length, 'Length (feet)' %><br />
    <%= f.text_field :yacht_specification_length %>
  </p>
  <p>
    <%= f.label :yacht_specification_manufacturer, 'Manufacturer' %><br />
    <%= f.text_field :yacht_specification_manufacturer %>
  </p>
  <p>
    <%= f.label :yacht_specification_model, 'Model' %><br />
    <%= f.text_field :yacht_specification_model %>
  </p>
  <p>
    <%= f.label :yacht_specification_year, 'Year' %><br />
    <%= f.text_field :yacht_specification_year %>
  </p>
  </div>

  <div style="text-align: left; clear: both;">
  <p class="button">
    <%= f.submit "Update" %>
  </p>
  </div>
<% end %>

<div style="text-align: left; clear: both;">
<%= link_to 'Show', @listing %> |
<%= link_to 'Back', listings_path %>
</div>

