<!-- Parameters: elements (an array of input field names), slice_size (# of inputs per table row), f (the form) -->
  <table>
  <% elements.each_slice(slice_size) do |slice| %>
    <tr>
    <% slice.each do |i| %>
      <td>
        <%= f.label i %><br />
        <%= f.text_field i %>
      </td>
    <% end %>
    </tr>
  <% end %>
  </table>
