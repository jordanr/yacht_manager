<% form_tag(listings_path, {:method=>:post, :multipart=>true, :class => "new_post", :id => "new_post"}) do %>
    <span id="listing"><%= render_partial 'new_listing' %></span>
    <span id="price"><%= render_partial 'new_price' %></span>
    <span id="yacht"><%= render_partial 'new_yacht' %></span>
    <span id="location"><%= render_partial 'new_location' %></span>
    <p>
      <%= label :yacht, :specification %><br />
      <%= collection_select(:yacht, :specification_id, Specification.standards, :id, :id) %>
    </p>
    <span id="specification"><%= render_partial 'new_specification' %></span>
    <p>
      <%= submit_tag "Create" %>
    </p>
<% end %>
<%= link_to 'Back', listings_path %>
