<div id='main_content'>
<h1>Listing listings</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th>Active?</th>
    <th></th>
    <th>Length</th>
    <th>Manufacturer</th>
    <th>Model</th>
    <th>Year</th>
    <th></th>    
    <th>Name</th>
    <th>Location</th>
    <th></th>    
    <th>Contact</th>
    <th>Price</th>
  </tr>

<% for listing in @listings %>
  <tr>
    <td><%= link_to 'Details', listing_details_path(listing) %></td>
    <td><%= link_to 'Photos', listing_photos_path(listing) %></td>
    <td><%=h listing.active %></td>
    <td class="spacer"></td>
    <td><%=h listing.yacht_specification_length %></td>
    <td><%=h listing.yacht_specification_manufacturer %></td>
    <td><%=h listing.yacht_specification_model %></td>
    <td><%=h listing.yacht_specification_year %></td>
    <td class="spacer"></td>
    <td><%=h listing.yacht_name %></td>
    <td><%=h listing.yacht_location %></td>
    <td class="spacer"></td>
    <td><%=h listing.contact %></td>
    <td><%=h listing.price %></td>
    <td><%= link_to 'Show', classified_path(listing) %></td>
    <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
    <td><%= link_to 'Destroy', listing, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New listing', new_listing_path %>
</div>
