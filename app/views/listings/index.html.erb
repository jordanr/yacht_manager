<h1>Listing listings</h1>

<table>
  <tr>
    <th>Length</th>
    <th>Manufacturer</th>
    <th>Name</th>
  </tr>

<% for listing in @listings %>
  <tr>
    <td><%=h listing.yacht.specification.length %></td>
    <td><%=h listing.yacht.specification.manufacturer %></td>
    <td><%=h listing.yacht.name %></td>
    <td><%= link_to 'Show', listing %></td>
    <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
    <td><%= link_to 'Destroy', listing, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

