<h1>Listing pictures</h1>

<table>
  <tr>
    <th>Order</th>
    <th>Description</th>
    <th>Content type</th>
    <th>Filename</th>
  </tr>

<% for picture in @pictures %>
  <tr>
    <td><%=h picture.order %></td>
    <td><%=h picture.description %></td>
    <td><%=h picture.content_type %></td>
    <td><%=h picture.filename %></td>
    <td><%= link_to 'Show', yacht_picture_path(picture.yacht.id, picture.id) %></td>
    <td><%= link_to 'Edit', edit_yacht_picture_path(picture.yacht.id, picture.id) %></td>
    <td><%= link_to 'Destroy', yacht_picture_path(picture.yacht.id, picture.id) , :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div id="uploader" style="background-color:lavender">
<%= render_partial 'new' %>
</div>
